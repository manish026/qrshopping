<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.qrshopping.ShopDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/header"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/vendor" />

        <TextView
            android:id="@+id/shopTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome Manish Malviya"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </LinearLayout>



    <Button
        android:id="@+id/show_stock"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/product_list"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="List of products"
        android:textSize="15sp" />

    <Button
        android:id="@+id/shopaddproduct"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/barcode_scan"
        android:background="@android:color/transparent"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Add products"
        android:textSize="18sp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/logout"
        android:background="@android:color/transparent"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="logout"
        android:textSize="18sp" />
</LinearLayout>
